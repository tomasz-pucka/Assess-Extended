<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UTA"
        xmlns:ViewModels="clr-namespace:UTA.ViewModels"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        x:Class="UTA.Views.MainView"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800">
    <Window.DataContext>
        <ViewModels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Button Name="ButtonAddAlternative" Click="AddAlternative" Content="Add" HorizontalAlignment="Left" Margin="314,54,0,0" VerticalAlignment="Top" Width="74" RenderTransformOrigin="1.72,0.375"/>
        <TextBox Name="TextBoxAlternativeName" HorizontalAlignment="Left" Height="23" Margin="26,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="TextBoxAlternativeDescription" HorizontalAlignment="Left" Height="23" Margin="171,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="64,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="207,24,0,0" VerticalAlignment="Top"/>

        <Label Content="Alternatives" HorizontalAlignment="Left" Margin="130,72,0,0" VerticalAlignment="Top"/>
        <Label Content="Ranking" HorizontalAlignment="Left" Margin="580,72,0,0" VerticalAlignment="Top"/>
        <ListView Name="AlternativesListView" HorizontalAlignment="Left"
                  Height="102" Margin="26,96,0,0" VerticalAlignment="Top" Width="298" RenderTransformOrigin="-0.638,-0.062"/>
        <ListView Name="RankingListView" ItemsSource="{Binding Alternatives.AlternativesList}" HorizontalAlignment="Left"
                  Height="102" Margin="450,96,0,0" VerticalAlignment="Top" Width="309" RenderTransformOrigin="-0.638,-0.062">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Alternative" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Description"  DisplayMemberBinding="{Binding Description}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Name="ButtonAddCriterion" Click="AddCriterion" Content="Add" HorizontalAlignment="Left" Margin="533,262,0,0" VerticalAlignment="Top" Width="74" RenderTransformOrigin="1.72,0.375"/>
        <TextBox Name="TextBoxCriterionName" HorizontalAlignment="Left" Height="23" Margin="26,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="TextBoxCriterionDescription" HorizontalAlignment="Left" Height="23" Margin="171,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox Name="ComboBoxCriterionType" HorizontalAlignment="Left" Margin="313,259,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox Name="TextBoxCriterionLinear" HorizontalAlignment="Left" Height="23" Margin="418,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="91"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="64,232,0,0" VerticalAlignment="Top"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="207,232,0,0" VerticalAlignment="Top"/>
        <Label Content="Type" HorizontalAlignment="Left" Margin="340,232,0,0" VerticalAlignment="Top"/>
        <Label Content="Linear&#xD;&#xA;Segments" HorizontalAlignment="Left" Margin="444,214,0,0" VerticalAlignment="Top" Width="80" Height="47"/>
        <ListView Name="CriteriaListView" HorizontalAlignment="Left"
                  Height="102" Margin="94,294,0,0" VerticalAlignment="Top" Width="342" RenderTransformOrigin="-0.638,-0.062"/>
    </Grid>
</Window>
