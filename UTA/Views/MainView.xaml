                <Label Content="Name" />
                <TextBox Name="TextBoxCriterionName" Height="23" Width="120" />
                <Label Content="Description" />
                <TextBox Name="TextBoxCriterionDescription" Height="23" Width="120" />
                <Label Content="Type" />
                <ComboBox Name="ComboBoxCriterionType" Width="82" />
                <Label Content="Linear Segments" />
                <TextBox Name="TextBoxCriterionLinear" Height="23" Width="91" />
                <Button Name="ButtonAddCriterion" Click="AddCriterion" Content="Add" Width="74" />
                <ListView Name="CriteriaListView" Height="102" Width="342" />

                <Label Content="Ranking" />
                <ListView Name="RankingListView" ItemsSource="{Binding Alternatives.AlternativesList}" Height="102" Width="309">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Alternative" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
            <DockPanel Grid.Row="1" Grid.Column="2" Background="#FFF0F0F0" />
        </Grid>
    </StackPanel>
</Window>