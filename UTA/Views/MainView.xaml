<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UTA"
        xmlns:ViewModels="clr-namespace:UTA.ViewModels" x:Class="UTA.Views.MainView"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800">
    <Window.DataContext>
        <ViewModels:VariantsList/>
    </Window.DataContext>
    <Grid>
        <ListView HorizontalAlignment="Left" Height="102" Margin="192,204,0,0" VerticalAlignment="Top" Width="342" RenderTransformOrigin="-0.638,-0.062" ItemsSource="{Binding VList}">
            <!-- <ListView.ItemTemplate> -->
            <!--     <DataTemplate> -->
            <!--         <TextBlock Text="{Binding Name}"/> -->
            <!--     </DataTemplate> -->
            <!-- </ListView.ItemTemplate> -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="First Property" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Second Property" DisplayMemberBinding="{Binding Description}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Add" Command="{Binding SaveCommand}" HorizontalAlignment="Left" Margin="512,115,0,0" VerticalAlignment="Top" Width="74" RenderTransformOrigin="1.72,0.375"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="192,115,0,0" TextWrapping="Wrap" Text="{Binding InputName}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="338,115,0,0" TextWrapping="Wrap" Text="{Binding InputDescription}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="230,89,0,0" VerticalAlignment="Top"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="373,89,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
